{
  "extends": ["astro/tsconfigs/strictest", "@prodkt/tsconfig/react.json"],
  "compilerOptions": {
    "jsx": "react", // or "react-jsx" for React 17+
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/supabase/*": ["src/supabase/*"]
    }
  }
}
